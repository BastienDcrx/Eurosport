<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance" />

    <style name="TextAppearance.Title">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Content">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.Content.Highlighted">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Content.Highlighted.Inverted">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Info">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/textColorTertiary</item>
    </style>

    <!-- TextStyles -->
    <style name="TagTextStyle">
        <item name="android:background">@drawable/bg_accent_rounded_corner</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_tiny</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Content.Highlighted.Inverted
        </item>
    </style>

</resources>
